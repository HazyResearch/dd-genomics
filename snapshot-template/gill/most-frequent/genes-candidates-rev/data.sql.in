SELECT 
  g.canonical_name, count(g.canonical_name), (array_agg(array_to_string(string_to_array(si.words, '|^|'), ' ')))[1]
FROM gene_mentions gm join genes g on (gm.gene_name = g.gene_name)
join sentences_input si on (gm.doc_id = si.doc_id and gm.section_id = si.section_id and gm.sent_id = si.sent_id)
WHERE 
  gm.is_correct != 'f' OR gm.is_correct IS NULL 
GROUP BY g.canonical_name
ORDER BY count ASC
LIMIT 1000
