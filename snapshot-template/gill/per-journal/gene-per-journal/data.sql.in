SELECT 
  q1.source_name
  , coalesce(q1.count, 0) as num_docs
  , q2.count as gene_cands
  , to_char(coalesce(q2.count, 0)::float / coalesce(q1.count, 1)::float, '999999999D99') as gene_cands_per_doc
  , coalesce(q3.count, 0) as gene_infs
  , to_char(coalesce(q3.count, 0)::float / coalesce(q1.count, 1)::float, '999999999D99') as gene_infs_per_doc
  FROM
    (SELECT
      source_name, count(distinct dm.doc_id)
      FROM
        sentences_input si
        JOIN doc_metadata dm ON (si.doc_id = dm.doc_id)
      GROUP BY
        source_name
      ORDER BY
        count DESC) q1
    RIGHT OUTER JOIN
    (SELECT
      source_name, count(distinct dm.doc_id)
      FROM
        gene_mentions gm
        JOIN doc_metadata dm ON (gm.doc_id = dm.doc_id)
      WHERE is_correct != 'f' OR is_correct IS NULL
      GROUP BY
        source_name
      ORDER BY
        count DESC) q2
    ON (q1.source_name = q2.source_name)
    RIGHT OUTER JOIN
    (SELECT
      source_name, count(distinct dm.doc_id)
      FROM
        gene_mentions_filtered_is_correct_inference gm 
        JOIN doc_metadata dm ON (gm.doc_id = dm.doc_id)
      WHERE expectation > 0.9
      GROUP BY
        source_name
      ORDER BY
        count DESC) q3
    ON (q2.source_name = q3.source_name)
ORDER BY num_docs DESC
LIMIT 1000
