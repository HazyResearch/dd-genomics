SELECT 
  q1.source_name
  , coalesce(q1.count, 0) as num_docs
  , coalesce(q8.count, 0) as pheno_cands
  , to_char(coalesce(q8.count, 0)::float / coalesce(q1.count, 1)::float, '999999999D99') as pheno_cands_per_doc
  , coalesce(q9.count, 0) as pheno_infs
  , to_char(coalesce(q9.count, 0)::float / coalesce(q1.count, 1)::float, '999999999D99') as pheno_infs_per_doc
  FROM
    (SELECT
      collate(source_name, 'UNKNOWN') source_name, count(distinct dm.doc_id)
      FROM
        sentences_input si
        LEFT OUTER JOIN doc_metadata dm ON (si.doc_id = dm.doc_id)
      GROUP BY
        source_name
      ORDER BY
        count DESC) q1
    RIGHT OUTER JOIN
    (SELECT
      collate(source_name, 'UNKNOWN') source_name, count(distinct dm.doc_id)
      FROM
        pheno_mentions pm 
        LEFT OUTER JOIN doc_metadata dm ON (pm.doc_id = dm.doc_id)
      WHERE is_correct != 'f' OR is_correct IS NULL
      GROUP BY
        source_name
      ORDER BY
        count DESC) q8
    ON (q1.source_name = q8.source_name)
    RIGHT OUTER JOIN
    (SELECT
      collate(source_name, 'UNKNOWN') source_name, count(distinct dm.doc_id)
      FROM
        pheno_mentions_filtered_is_correct_inference pm 
        LEFT OUTER JOIN doc_metadata dm ON (pm.doc_id = dm.doc_id)
      WHERE expectation > 0.9
      GROUP BY
        source_name
      ORDER BY
        count DESC) q9
    ON (q8.source_name = q9.source_name)
ORDER BY num_docs DESC
LIMIT 1000
